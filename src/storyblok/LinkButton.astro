---
import { storyblokEditable } from "@storyblok/astro";
import type { LinkButtonStoryblok } from "../../component-types-sb";
import { getLinkUrl } from "../utils/getLinkUrl";

export interface Props {
  blok: LinkButtonStoryblok;
  language: string;
}

const { blok } = Astro.props;

const url = getLinkUrl(blok.link);

const styles = {
  font: {
    lora: "font-lora",
    rubik: "font-rubik",
  },
  type: {
    primary: "text-secondary-100 bg-secondary-500",
    secondary: "text-text-500 bg-ternary-300",
    ternary: "",
  },
};

const type = !!blok.style ? styles.type[blok.style] : styles.type.primary;
---

<a
  {...storyblokEditable(blok)}
  href={url}
  class:list={[
    "inline-block px-11 py-3 text-center capitalize text-text-500 shadow-main shadow-text-500 transition-all hover:translate-x-[12px] hover:translate-y-[12px] hover:bg-secondary-300 hover:shadow-main-hover max-md:text-md",
    type,
  ]}
>
  {blok.text}
</a>
