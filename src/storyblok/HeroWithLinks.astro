---
import { storyblokEditable } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import type { HeroWithLinksStoryblok } from "../../component-types-sb";
import { Image } from "astro:assets";
import Stain1 from "@images/stain1.svg";
// import Stain1 from "../images/stain1.svg";
import Stain2 from "@images/stain2.svg";

interface Props {
  blok: HeroWithLinksStoryblok;
  language: string;
}

const { blok, language } = Astro.props;
---

<div
  {...storyblokEditable(blok)}
  class="relative bg-secondary-500 px-8 pt-20 md:px-20"
>
  <Image src={Stain1} alt="" class="z-10 absolute right-0 md:-right-20 -top-8 md:top-0 h-[470px] max-md:w-32" />
  <Image src={Stain2} alt="" class="z-10 absolute left-[8%] top-[30%] w-32 md:w-96" />
  <div class="relative z-20 py-6 md:py-16">
    <h1 class="mb-10 text-center text-2xl font-bold text-text-500 md:text-5xl">
      {blok.title}
    </h1>
    {
      !!blok.links && (
        <div class="mx-auto max-w-96">
          <div class="flex justify-around gap-8">
            {blok.links.map((blok) => (
              <StoryblokComponent
                blok={{
                  ...blok,
                  fontSize: "text-2xl",
                  color: "black",
                  font: "lora",
                }}
                language={language}
              />
            ))}
          </div>
        </div>
      )
    }
  </div>
</div>
