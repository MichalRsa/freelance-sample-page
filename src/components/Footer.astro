---
import { Image } from "astro:assets";
import type { Props as LinkProps } from "../storyblok/Link.astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const { blok, language } = Astro.props;

const { footer_menu, socials, phone_number, opening_hours } = blok;
---

<footer
  class="flex w-full justify-between bg-primary-700 px-2 py-4 text-primary-50 md:px-20"
>
  <div>
    <h3>Kawusia</h3>
    <div class="flex justify-between flex-shrink">
      {
        socials.map((social: any) => (
          <a href="/">
            <Image src={social.filename} alt="" width={96} height={96} />
          </a>
        ))
      }
    </div>
    <a
      href={`tel:${phone_number}`}
      class="block pt-4 text-center text-md underline">{phone_number}</a
    >
  </div>
  <div>
    <p class="pb-4 font-bold">Opening Hours</p>
    {
      (
        <ul class="md:w-64">
          {opening_hours.map((day: any) => (
            <li>
              <p class="flex justify-between pb-1">
                <span>{day.day}</span>
                <span>{day.hours}</span>
              </p>
            </li>
          ))}
        </ul>
      )
    }
  </div>

  <div>
    <ul class="flex h-full flex-col justify-start text-base font-bold">
      {
        footer_menu.map((menuItem: LinkProps) => (
          <li class="mb-10">
            <StoryblokComponent blok={{ ...menuItem, language }} />
          </li>
        ))
      }
    </ul>
  </div>
</footer>
